################################################################
# Profile library Makefile
################################################################

SHELL = /bin/sh

PATH := ../../src:$(PATH)

PREFIX  = /usr/local
DATADIR = $(PREFIX)/share/cms/profiles

INSTALL = install


# Targets
.PHONY: all clean distclean install

all: profiles.pl
	perl $^ > index.html

clean:
	rm -rf `cat FILES | awk '{print $$1;}'`

distclean: clean
	rm -f FILES index.html *.tar.gz *.zip

install:
	$(INSTALL) -d $(DATADIR)
	for i in spaces/*; do $(INSTALL) -m 0644 $$i $(DATADIR)/$${i#spaces/}; done
