################################################################
# $Id: Makefile.in,v 1.9 2005/10/03 00:33:50 afrolov Exp $
# Makefile for Scarse source code
################################################################

SHELL = /bin/sh
@SET_MAKE@

################################################################
# Configuration
################################################################

# Programs
CC	= @CC@
AR	= @AR@
RANLIB	= @RANLIB@
UXP	= @UXP@
INSTALL = @INSTALL@
INSTDAT = @INSTALL_DATA@

# Compiler flags
CFLAGS	= @CFLAGS@
INCLUDE	= -I../icclib
DEFINES	= @DEFS@ -DDATADIR='"${datadir}"'

LIBS	= @LIBS@
LDFLAGS	= @LDFLAGS@

ALLFLAGS = $(CFLAGS) $(INCLUDE) $(DEFINES)


# Installation dirs
prefix  	= @prefix@
exec_prefix	= @exec_prefix@

bindir  	= @bindir@
libdir  	= @libdir@
includedir	= @includedir@
datadir 	= @datadir@/cms

# Files
hdrs		= $(wildcard *.h imageio/*.h)
objs		= $(wildcard *.@OBJEXT@ imageio/*.@OBJEXT@ *.a)
icclib		= ../icclib/icc.@OBJEXT@
imageio		= $(addprefix imageio/, $(addsuffix .@OBJEXT@, pack tiff ppm imageio))
bins		= cmap ipb calibrate


################################################################
# Dependencies
################################################################

# Targets
.PHONY: all clean distclean install

all: $(bins)

clean:
	rm -f $(objs)

distclean: clean
	rm -f $(bins) gmon.out config.h Makefile

install: $(bins)
	$(INSTALL) -d $(bindir)
	$(INSTALL) -s $(bins) $(bindir)
	$(UXP) $(addprefix $(bindir)/, $(bins))


# Dependencies
cmap: cmap.o $(imageio) util.o $(icclib)

ipb: ipb.o fit.o spaces.o matrix.o util.o $(icclib)

calibrate: calibrate.o targets.o $(imageio) spaces.o matrix.o util.o $(icclib)



################################################################
# Implicit rules
################################################################

%.o: %.c $(hdrs)
	$(CC) $(ALLFLAGS) -c $< -o $@

%: %.o
	$(CC) $(LDFLAGS) $^ $(LIBS) -o $@
