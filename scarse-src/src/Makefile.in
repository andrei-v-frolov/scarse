################################################################
# $Id: Makefile.in,v 1.8 2005/10/02 13:55:22 afrolov Exp $
# Makefile for Scarse source code
################################################################

SHELL = /bin/sh
@SET_MAKE@

################################################################
# Configuration
################################################################

# Programs
CC	= @CC@
AR	= @AR@
RANLIB	= @RANLIB@
INSTALL = @INSTALL@
INSTDAT = @INSTALL_DATA@

# Compiler flags
CFLAGS	= @CFLAGS@
INCLUDE	= -I../icclib
DEFINES	= @DEFS@ -DDATADIR='"${datadir}"'

LIBS	= -L../icclib -licc @LIBS@
LDFLAGS	= @LDFLAGS@

ALLFLAGS = $(CFLAGS) $(INCLUDE) $(DEFINES)


# Installation dirs
prefix  	= @prefix@
exec_prefix	= @exec_prefix@

bindir  	= @bindir@
libdir  	= @libdir@
includedir	= @includedir@
datadir 	= @datadir@/cms

# Files
hdrs		= $(wildcard *.h imageio/*.h)
objs		= $(wildcard *.@OBJEXT@ imageio/*.@OBJEXT@ *.a)
bins		= cmap ipb calibrate


################################################################
# Dependencies
################################################################

# Targets
.PHONY: all clean distclean install

all: $(bins)

clean:
	rm -f $(objs)

distclean: clean
	rm -f $(bins) gmon.out

install: $(bins)
	$(INSTALL) -d $(bindir)
	$(INSTALL) -s $(bins) $(bindir)


# Dependencies
cmap: cmap.o imageio.a util.o

ipb: ipb.o fit.o spaces.o matrix.o util.o

calibrate: calibrate.o targets.o imageio.a spaces.o matrix.o util.o

imageio.a: $(addprefix imageio/, pack.o tiff.o ppm.o imageio.o)
	$(AR) $@ $^
	$(RANLIB) $@



################################################################
# Implicit rules
################################################################

%.o: %.c $(hdrs)
	$(CC) $(ALLFLAGS) -c $< -o $@

%: %.o
	$(CC) $(LDFLAGS) $^ $(LIBS) -o $@
